@model CMS.Models.GradeCollege

@{
    ViewData["Title"] = "createGrades";
}

@* @foreach (var item in ViewBag.lt)
{
    <p>@item.Email</p>
} *@

<br><br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="createGrades">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label">Email&nbsp; &nbsp; &nbsp; &nbsp; </label>
                <div class="col-sm-10">
                    <select asp-for="Email" class="form-control" type="text">
                        @foreach(var item in ViewBag.lt)
                        {
                            string temp = item.Email.ToString();
                            <option value=@temp type="text">@temp</option>
                        }
                </select>
                <span sp-validation-for="Email" class="text-danger"></span>
                </div>
                @* <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div> *@
            </div>
            <div class="form-group row">
                <label asp-for="Subject" class="control-label">Subject&nbsp; &nbsp; &nbsp; &nbsp;</label>
                <div class="col-sm-10">
                    <input asp-for="Subject" class="form-control" type="text" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Grade" class="control-label">Grade&nbsp; &nbsp; &nbsp; &nbsp;</label>
                <div class="col-sm-10">
                    <input asp-for="Grade" class="form-control" type="text" />
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
