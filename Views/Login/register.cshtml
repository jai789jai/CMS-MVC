@model CMS.Models.UserCollege

@{
    ViewData["Title"] = "register";
}

<br><br>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label">Email&nbsp; &nbsp; &nbsp; &nbsp; </label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" type="text"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="control-label">Name&nbsp; &nbsp; &nbsp; &nbsp; </label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="control-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Phone" class="control-label">Phone&nbsp; &nbsp; &nbsp; &nbsp;</label>
                <div class="col-sm-10">
                    <input asp-for="Phone" class="form-control" type="text" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Type" class="control-label">Type&nbsp; &nbsp; &nbsp; &nbsp;</label>
                <div class="col-sm-10">
                    <select asp-for="Type" class="form-control" type="text">
                    <option value="student" >Student</option >
                    <option value="admin" >Admin</option >
                    <option value="lecturer" >Lecturer</option >
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
